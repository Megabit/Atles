@page "/admin/categories/edit/{id:guid}"

@inherits Atlas.Client.Components.Admin.Categories.EditPage

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/dashboard">@Loc["Home"]</a></li>
        <li class="breadcrumb-item"><a href="/admin/categories">@Loc["Categories"]</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Loc["Edit Category"]</li>
    </ol>
</nav>

<h3 class="mb-3">@Loc["Edit Category"]</h3>

@if (Model == null)
{
    <Loading />
}
else
{
    <Form Model="Model" Button="@Loc["Update"]" OnValidSubmit="@UpdateAsync"></Form>
    <TargetEvents Id="Id"></TargetEvents>
}